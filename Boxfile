global:
  env:
    - LARAVEL_ENV: production
    - ENV: production
web1:
  document_root: public
  php_version: 5.4.14
  php_extensions:
    - mbstring
    - mcrypt
    - pdo_mysql
    - redis
    - zip
    - xcache
  php_session_save_handler: redis
  php_session_save_path: "tcp://tunnel.pagodabox.com:6379"
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
    - app/storage/tmp
    - app/storage/pdf
    - public/compcards
    - app/bin/pdftk/usr/bin
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-dist"
    - "apt-get install pdftk"
    - "export PATH=app/bin/pdftk/usr/bin:$PATH;"
    - "export LD_LIBRARY_PATH=app/bin/pdftk/usr/lib:$LD_LIBRARY_PATH;"
    - "chmod +x app/bin/pdftk/usr/bin/pdftk"
    - "php artisan dump-autoload"
  before_deploy:
    - "php artisan migrate"
    # - "php artisan db:seed" # No longer need to seed
  after_deploy:
    - "php artisan cache:clear"
    - "rm -f app/storage/views/*"
cache1:
  type: redis